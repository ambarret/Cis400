@page
@using PizzaParlor.Data;
@using PizzaParlor.Data.Pizzas;
@using PizzaParlor.Data.Breadsticks;
@using PizzaParlor.Data.Drinks;
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Pizza Parlor</h1>
    <p>Welcome to the Pizza Parlor!</p>

    <form>
        <div id="search">
            <input type="text" name="SearchTerms" value="@Model.SearchTerms" />
            <input type="submit" value="Search">
        </div>

        <h4>Calories</h4>
        <div>
            Between
            <input name="CaloriesMin" type="number" min="0" max="507" step="1" placeholder="min" value="@Model.CaloriesMin" />
            and
            <input name="CaloriesMax" type="number" min="0" max="507" step="1" placeholder="max" value="@Model.CaloriesMax" />
        </div>

        <h4>Price</h4>
        <div>
            Between
            <input name="PriceMin" type="number" min="0" max="21.99" step="0.01" placeholder="min" value="@Model.PriceMin" />
            and
            <input name="PriceMax" type="number" min="0" max="21.99" step="0.01" placeholder="max" value="@Model.PriceMax" />
        </div>
    </form>


    <h1 id="pizza">Pizza</h1>
        <ul>
            @foreach (Pizza pizza in Model.Pizza)
            {
            <li>
                <div class="pizza_details">
                    <h3>@pizza.Name</h3>
                    <div>
                        @foreach(string instruction in pizza.SpecialInstructions)
                        {
                            <div>@instruction</div>
                        }
                    </div>
                    <div>Price: @pizza.Price</div>
                    <div>Calories Per Slice: @pizza.CaloriesPerEach</div>
                </div>
            </li>
            }
    </ul>
    <h1 id="sides">Sides</h1>
    <ul>
        @foreach (Sides side in Model.Sides)
        {
            <li>
                <div class="pizza_details">
                    <h3>@side.Name</h3>
                    <div>
                        @foreach (string instruction in side.SpecialInstructions)
                        {
                            <div>@instruction</div>
                        }
                    </div>
                    <div>Price: @side.Price</div>
                    <div>Calories per item: @side.CaloriesPerEach</div>
                </div>
            </li>
        }
    </ul>
    <h1 id="drinks">Drinks</h1>
    <ul>
        @foreach (Drink drink in Model.Drinks)
        {
            <li>
                <div class="pizza_details">
                    <h3>@drink.Name</h3>
                    <div>
                        @foreach (string instruction in drink.SpecialInstructions)
                        {
                            <div>@instruction</div>
                        }
                    </div>
                    <div>Price: @drink.Price</div>
                    <div>Calories: @drink.CaloriesPerEach</div>
                </div>
            </li>
        }
    </ul>
</div>
